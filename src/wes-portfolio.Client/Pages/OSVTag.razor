        <MudImage Src="images/osvtag/portal-uploaded-tags.png" Alt="uploaded tags" Fluid="fluid" Class="rounded-lg" Elevation="elevation" />
    </MudItem>
    <MudItem lg="6">
        <MudImage Src="images/osvtag/tag-portal-invitations.png" Alt="send invitation area" Fluid="fluid" Class="rounded-lg" Elevation="elevation" />
